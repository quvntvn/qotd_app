<?xml version="1.0" encoding="utf-8"?>
<!-- Fond semi-transparent + contour fin pour le verre -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couleur laiteuse 25 % d’opacité -->
    <solid android:color="#40FFFFFF" />

    <!-- Rayon de 16 dp pour rappeler les flous iOS/Material 3 -->
    <corners android:radius="16dp" />

    <!-- Liseré blanc 35 % d’opacité -->
    <stroke
        android:width="1dp"
        android:color="#59FFFFFF" />
</shape>
